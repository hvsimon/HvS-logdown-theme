<!doctype html>
<html class="no-js">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href='http://cdn.jsdelivr.net/semantic-ui/2.1.6/semantic.min.css' media='all' rel='stylesheet' type='text/css' />
    <script src='https://cdn.jsdelivr.net/jquery/3.0.0-alpha1/jquery.min.js'></script>
    <script src='http://cdn.jsdelivr.net/semantic-ui/2.1.6/semantic.min.js'></script>
    <link rel="stylesheet" href="https://hvsimon.github.io/HvS-logdown-theme/stylesheets/style.css" />
    <link rel="stylesheet" href="http://logdown.com/stylesheets/default_pagination.css" />
	<link rel="stylesheet" href="https://hvsimon.github.io/HvS-logdown-theme/stylesheets/github-markdown.css">
	<style>
		.markdown-body {
			box-sizing: border-box;
			min-width: 200px;
			max-width: 980px;
			margin: 0 auto;
			padding: 45px;
		}
	</style>
    <!-- Fallback fonts from Google Webfonts -->
    <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700|PT+Serif:400,700,400italic,700italic|Source+Code+Pro:400,700' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="container">
      <!-- header -->
      <header class="ui inverted vertical center aligned logo segment">
        <div class="ui text container">
          <a href="{{blog.absolute_url}}">
            <h1 class="ui inverted header">{{blog.title}}</h1>
          </a>
        </div>
        <!-- nav -->
        <nav class="ui center aligned nav segment">
          <div class="ui horizontal bulleted nav list">
            <a class="item" href="{{blog.absolute_url}}">
				Home
			  </a>
            <a class="item" href="{{ blog.archives_url }}">
				Archives
			  </a>
          </div>
        </nav>
      </header>
      <!-- main -->
      <div class="ui grid container">
        <div class="four wide computer only column">
          <!-- sidebar -->
          <aside>
            <!-- about me -->
            <div class="ui fluid card">
              <div class="image">
                <img src="{{ blog.default_cover_url }}">
              </div>
              <div class="content">
                <a class="header">HvSimon</a>
                <div class="meta">
                  I'm a Learner Forever.
                </div>
                <div class="description">
                  <div class="ui list">
                    <div class="item">
                      <i class="student icon"></i>
                      <div class="content">
                        Library and Information Science
                      </div>
                    </div>

                    <div class="item">
                      <i class="student icon"></i>
                      <div class="content">
                        Computer Science
                      </div>
                    </div>

                    <div class="item">
                      <i class="marker icon"></i>
                      <div class="content">
                        &nbsp;&nbsp;Taipei, Taiwan <i class="tw flag"></i>
                      </div>
                    </div>
                    <div class="item">
                      <i class="mail icon"></i>
                      <div class="content">
                        <a href="mailto:a309011@gmail.com">&nbsp;&nbsp;a309011@gmail.com</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="extra content">
                <a href="https://github.com/hvsimon">
                  <i class="github icon"></i> Github
                </a>
              </div>
            </div>
            <!-- catgories -->
            {% block category_list %}
            <div class="ui vertical fluid menu">
              <a class="active teal item" href="{{ blog.archives_url }}">
				All
			  </a> {% block categories %}
              <a class="item" href="{{ category.url }}">
				{{category.name}}
				<div class="ui label">{{category.count}}</div>
			  </a> {% endblock %}
            </div>
            {% endblock %}
          </aside>
        </div>
        <div class=" twelve wide computer sixteen wide article column">
		
<!-- 施工 -->
		<div class="ui icon message">
		  <i class="configure icon"></i>
		  <div class="content">
			<div class="header">
			  到處施工
			</div>
			<p>攻城獅正在努力！</p>
		  </div>
		</div>
<!-- post archives -->

{% block archives_page %}
	{% block archives %}
		<div class="ui relaxed divided list">
		{% block posts %}
			<div class="item">
				<i class="large square middle aligned icon"></i>
				<div class="content">
					<a class="header" href="{{post.absolute_url}}">{{post.title}}</a>
				</div>
			</div>
		  {% endblock %}
		</div>
	{% endblock %}
{% endblock %}
	
<!-- post article -->
    {% block posts %}
          <div class="ui fluid card"">
            <div class="title content">
              <a href="{{post.absolute_url}}">
                <span><h1>			
				{% block tags_page|index_page|show_page %}
					{{post.title}}
                {% endblock %}
				</h1></span>
              </a>
              <div class="meta">
                <span class="date">{{post.published_at.date}}</span>
              </div>
            </div>
            <div class="content">
              <div class="description markdown-body">
                {% block show_page %} 
					{{ post.content }} 
				{% endblock %} 
				{% block index_page|tags_page %} 
					{{ post.excerpt_content }}
              </div>
            </div>
            <div class="extra content">
            {% block readmore %}
              <div class="ui animated right floated button" tabindex="0">
                <a href="{{post.absolute_url}}" class="more-link">
                  <div class="visible content">Read more</div>
                  <div class="hidden content">
                    <i class="chevron right icon"></i>
                  </div>
                </a>
              </div>
				{% endblock %} 
				{% block tag_list %}
              <div class="ui hvs-pink labels">
					{% block tags %}
                <a class="ui label" href="{{tag.url}}">{{tag.name}}</a>
					{% endblock %}
              </div>
				{% endblock %}
			{% endblock %}
            </div>
          </div>
	{% endblock %}
<!-- pagination -->
	{% block pagination %}
		<div class="pagination pagination-centered">
			<ul>
			{% block previous_page %}
				<li class="prev previous_page ">
					<a href="{{previous_page_url}}">Previous</a>
				</li>
			{% endblock %}

			{% block jump_pagination %}

				{% block current_page %}
				  <li class="active">
					<a href="#">{{page_number}}</a>
				  </li>
				{% endblock %}

				{% block page_gap %}
				  <li class="disabled">
					<a href="#"><span class="gap">…</span></a>
				  </li>
				{% endblock %}

				{% block jump_page %}
				  <li>
					<a href="{{page_url}}">{{page_number}}</a>
				  </li>
				{% endblock %}

			{% endblock %}

			{% block next_page %}
				<li class="next next_page ">
				  <a href="{{next_page_url}}">Next</a>
				</li>
			{% endblock %}
			</ul>
		</div>
		{% endblock %}
        </div>
        </article>
        </section>
      </div>
    </div>
    <!-- footer -->
    <footer class="ui center aligned footer segment">
      © 2016 Simon Lin
    </footer>
    </div>
  </body>
</html>
